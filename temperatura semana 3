# PROGRAMACIÓN TRADICIONAL
# Objetivo: Calcular el promedio semanal de temperaturas.

def entrada_datos_diarios():
    """
    Solicita al usuario las temperaturas diarias de la semana.
    Retorna una lista de las 7 temperaturas.
    """
    temperaturas = []
    dias_semana = ["Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado", "Domingo"]
    print("--- Entrada de Temperaturas Diarias ---")
    for dia in dias_semana:
        while True:
            try:
                # Se pide la temperatura en un bucle hasta que sea un número válido
                temp = float(input(f"Ingrese la temperatura del {dia}: "))
                temperaturas.append(temp)
                break
            except ValueError:
                print("Entrada no válida. Por favor, ingrese un número para la temperatura.")
    return temperaturas

def calcular_promedio_semanal(temperaturas):
    """
    Calcula el promedio de una lista de temperaturas.
    """
    # Se asegura que haya datos para evitar errores
    if not temperaturas:
        return 0
    
    # Cálculo del promedio: suma de todos los elementos / número de elementos
    suma_total = sum(temperaturas)
    promedio = suma_total / len(temperaturas)
    return promedio

# --- Programa Principal ---
def main_tradicional():
    # 1. Obtener los datos de temperatura
    temperaturas_semana = entrada_datos_diarios()
    
    # 2. Calcular el promedio
    promedio = calcular_promedio_semanal(temperaturas_semana)
    
    # 3. Mostrar el resultado
    print("\n--- Resultado ---")
    print(f"Temperaturas registradas: {temperaturas_semana}")
    print(f"El promedio semanal de la temperatura es: {promedio:.2f} grados.")

if __name__ == "__main__":
    main_tradicional()
